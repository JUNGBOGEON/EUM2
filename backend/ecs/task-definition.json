{
  "family": "eum-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::149850910112:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::149850910112:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "eum-backend",
      "image": "149850910112.dkr.ecr.ap-northeast-2.amazonaws.com/eum-backend:IMAGE_TAG",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "8080" }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:DB_HOST::"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:DB_PORT::"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:DB_USERNAME::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:DB_PASSWORD::"
        },
        {
          "name": "DB_DATABASE",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:DB_DATABASE::"
        },
        {
          "name": "REDIS_HOST",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:REDIS_HOST::"
        },
        {
          "name": "REDIS_PORT",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:REDIS_PORT::"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:JWT_SECRET::"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:AWS_ACCESS_KEY_ID::"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:AWS_SECRET_ACCESS_KEY::"
        },
        {
          "name": "AWS_REGION",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:AWS_REGION::"
        },
        {
          "name": "S3_BUCKET_NAME",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:149850910112:secret:eum/production:S3_BUCKET_NAME::"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/eum-backend",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
